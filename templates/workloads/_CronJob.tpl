{{- define "workloads.CronJob" -}}
  {{- $_ := set . "_kind" "CronJob" }}

  {{- nindent 0 "" -}}apiVersion: batch/v1
  {{- nindent 0 "" -}}kind: {{ ._kind }}
  {{- nindent 0 "" -}}metadata:
    {{- include "definitions.ObjectMeta" . | trim | nindent 2 }}

  {{- $__spec := include "workloads.CronJobSpec" . | fromYaml }}
  {{- if $__spec }}
